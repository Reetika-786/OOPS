// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

class node{
    public:
    int val;
    node* prev;
    node* next;
    node(int data){
        val = data;
        prev = NULL;
        next = NULL;
    }
};
class dll{
    public:
    node* head;
    node* tail;
    dll(){
        head = NULL;
        tail = NULL;
    }
    
    void insertattail(int val){
        node* n = new node(val);
        if(tail == NULL){
            head=n;
            tail=n;
        }else{
        tail->next = n;
        n->prev = tail;
        tail = n;
        }
    }
    
    void display(){
        node* temp = head;
        if(head==NULL){
            cout<<"empty ll";
            return;
        }
        while(temp != NULL){
            cout<<temp->val<<" ";
            temp = temp->next;
        }
        cout<<endl;
    }
    
    bool isPalindrome(node* &head, node* &tail){
        while(head != tail && tail != head->prev){  //one or two nodes
            if(head->val != tail->val){
                return false;
            }
            head= head->next;
            tail= tail->prev;
        }
        return true;
    }
};

int main() {
    dll dll1;
    dll1.insertattail(3);
    dll1.insertattail(2);
    dll1.insertattail(1);
    dll1.insertattail(1);
    dll1.insertattail(2);
    dll1.insertattail(3);
    dll1.display();
    int ans = dll1.isPalindrome(dll1.head, dll1.tail);
    cout<<ans;
    

    return 0;
}
